{
  "name": "motifxd-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "typecheck": "turbo run typecheck --parallel",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm run dev --filter web",
    "dev:docs": "pnpm run dev --filter docs",
    "dev:plugin:only": "pnpm run dev --filter @labxd/motif-figma-plugin",
    "dev:plugin": "pnpm run dev --filter web --filter @labxd/motif-figma-plugin",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "prettier": "2.7.1",
    "turbo": "^1.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@7.16.0"
}
