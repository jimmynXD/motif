{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/modules/*"],
      "@labxd/comlink-figma": ["src/modules/comlinkFigma"]
    },
    "strict": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
