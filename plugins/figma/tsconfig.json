{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/modules/*"
      ],
      "@labxd/comlink-figma": [
        "src/modules/comlinkFigma"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
