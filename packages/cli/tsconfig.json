{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2019",
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./node_modules/web/src/modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
