{
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "downlevelIteration": true,
    "paths": {
      "@/*": ["src/modules/*"],
      "@*": ["src/*"],
      "web/api/*": ["src/modules/web/api/*"]
    }
  }
}
